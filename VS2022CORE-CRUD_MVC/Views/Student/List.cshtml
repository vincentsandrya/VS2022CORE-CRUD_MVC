@{
}

@model List<VS2022CORE_CRUD_MVC.Models.Entities.Student>

<h1>List of Student</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td><a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id">edit</a></td>
            </tr>
        }
    </tbody>

</table>